                <p><a href="" class="button">Pelajari Lebih Lanjut</a></p>
            </div>
            <img src="https://www.static-src.com/wcsstore/Indraprastha/images/catalog/full//85/MTA-2804051/indocustomcase_indocustomcase-paris-saint-germain-logo-psg-03-cover-casing-for-xiaomi-pocophone-f1_full03.jpg"/>
        </section>

    <div class="container mt-4">
        {{#if products}}
        <div class="row main-content">
            <div class="col-4">
                <img src="{{product.0.image}}" class="img-content img-fluid" alt="">
            </div>
            <div class="col-8">
                <a href="/product/{{products.0.id}}"></a>
                <div class="text-title-content mb-4">
                    {{products.0.name}}
                </div>
                <div class="text-desc-content">
                    {{products.0.description}}
                </div>
            </div>
        </div>
        <div class="row mt-5">
            {{#each products}}
            <div class="col-3 content-list">
                <a href="/product/{{this.id}}">
                     <img src="{{product.image}}" alt="product image" class="img-main">
                    <div class="title mt-3">
                        {{this.name}}
                    </div>
                </a>
            </div>
            {{/each}}
        </div>
        {{/if}}
    </div>

    {{!-- layout founder --}}
    <section id="contact">
        <div class="center">
            <div class="column">
                <h2>Founder</h2>
                <p>Man a focus and comitmen</p>
            </div>

            <div class="profile-list">
                <div class="profile">
                    <img src="/static/image/profil.png" />
                    <p>Oututsuki isshiki</p>
                </div>
            </div>
        </div>
    </section>

</div>

{{> footer}}