<div class="container text center pt-5">
    <form action="/product" method="POST" enctype="multipart/form-data">
        <div>
            <input type="file" hidden id="file" aria-label="file upload" name="image">
            <label class="field" for="file">Attach Thumbnail <img src="/static/icons/attach.svg" alt=""></label>
        </div>
        <div>
            <input class="field" type="text" placeholder="title" name="name">
        </div>
        <div>
            <textarea class="field" placeholder="your content goes here..." rows="8" name="description"></textarea>
        </div>
            <button type="submit" class="btn-login">Submit</button>
    </form>
</div>

